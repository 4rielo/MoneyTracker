<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/transaction_item_height"
        android:background="@drawable/bg_list_item_frame">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="@dimen/transaction_item_margin_start"
            android:background="@drawable/bg_circle"
            app:srcCompat="@drawable/ic_house"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="@dimen/transaction_title_size"
            android:text="@{transaction.concept}"
            android:layout_marginTop="@dimen/transaction_item_margin_top"
            android:layout_marginHorizontal="@dimen/transaction_item_margin_start"
            android:textAlignment="textStart"
            app:layout_constraintStart_toEndOf="@id/ivIcon"
            app:layout_constraintEnd_toStartOf="@id/tvAmount"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tvSubTitle"
            app:layout_constraintHorizontal_bias="0.0"
            android:ellipsize="end"
            android:maxLines="1"
            tools:text="Titulo de la transacciÃ³n"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvSubTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/transaction_item_margin_top"
            android:text="@{transaction.note}"
            app:layout_constraintStart_toStartOf="@id/tvTitle"
            app:layout_constraintEnd_toEndOf="@id/tvTitle"
            app:layout_constraintTop_toBottomOf="@id/tvTitle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:textAlignment="textStart"
            android:ellipsize="end"
            android:maxLines="1"
            tools:text="Brief description"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/transaction_amount_size"
            android:text="@{@string/format_ammount(transaction.amount)}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBaseline_toBaselineOf="@id/tvTitle"
            android:layout_marginEnd="@dimen/transaction_item_margin_start"
            tools:text="$ -200"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@id/tvAmount"
            app:layout_constraintBaseline_toBaselineOf="@id/tvSubTitle"
            tools:text="20 dic"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <data>
        <variable
            name="transaction"
            type="com.moneytracker.app.android.domain.model.TransactionEntity" />
    </data>
</layout>